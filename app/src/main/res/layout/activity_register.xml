<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F7"
    tools:context=".RegisterActivity">
    <ImageView
        android:id="@+id/register_icon"
        android:layout_width="173dp"
        android:layout_height="155dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/google" />
    <EditText
        android:layout_below="@id/register_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_email"
        android:background="@drawable/inputs"
        android:padding="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"        android:drawableLeft="@drawable/ic_email"
        android:inputType="textEmailAddress"
        android:hint="Email"></EditText>

    <EditText
        android:layout_below="@id/register_email"
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/inputs"
        android:padding="12dp"
        android:drawableLeft="@drawable/ic_password_lock"
        />

    <EditText
        android:layout_below="@+id/register_password"
        android:id="@+id/register_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:hint=" Confirm Password"
        android:inputType="textPassword"
        android:background="@drawable/inputs"
        android:padding="12dp"
        android:drawableLeft="@drawable/ic_password_lock"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"        android:layout_below="@id/register_confirm_password"
        android:background="@drawable/button"
        android:padding="5dp"
        android:textSize="22sp"
        android:id="@+id/register_create_account"
        ></Button>

</RelativeLayout>